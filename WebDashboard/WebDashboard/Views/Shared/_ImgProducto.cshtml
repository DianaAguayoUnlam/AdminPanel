@model List<Entidades.Imagen>
<div class="card d-flex justify-content-center shadow-sm p-1">
    <div class="card-header d-flex justify-content-between">
        <h6 class="d-flex m-0">Imagen por producto</h6>
        <input type="text" name="idProducto" value="" id="idProducto" placeholder="Id" />
        <button type="button" class=" btn btn btn-ligth py-0 px-2" onclick="actualizarImgProducto();">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"></path>
                <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"></path>
            </svg>
        </button>
    </div>
    <div class="card-body" id="imgProduct">

        @if (Model != null && Model.Count > 0)
        {
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                <div class="carousel-inner">
                    @foreach (var img in Model)
                    {
                        <div class="carousel-item @if(@Model.IndexOf(img)==0){<text>active</text> }">
                            <img src="@img.Url" class="d-block w-100" alt="Product image">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }
        else
        {
            <!-- Img Default -->
            <img class="w-100" src="https://via.placeholder.com/600/92c952" alt="Default image">
        }
    </div>
</div>